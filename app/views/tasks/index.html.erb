<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>詳細</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細',task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id) %></td>
    <td><%= link_to "削除", task_path(task.id),method: :delete %></td>
  </tr>
<% end %>
</table>
<p><%= link_to '新規投稿', new_task_path %></p>
